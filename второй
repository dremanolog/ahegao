def Канкуляторматематический():
    P = float(input("Введите первое число:"))
    O = str(input("Введите оператора (+,-,/,*); для квадрата ^" ))
    V = float(input("Введите второе число"))
    if O == '+':
        r = P + V                #СУММА
        print("Результат:",r)    
    elif O == '-':
        r = P - V                #РАЗНОСТЬ
        print("Результат:",r)
    elif O == '/':
        r = P / V                #ДЕЛЕНИЕ
        print("Результат:",r)
    elif O == '*':
       r = P * V                #ПРОИЗВИДЕНИЕ
       print("Результат:",r)
    elif O == '^':
        r = P**V                #СТЕПЕНЬ
        print("Результат:",r)
    else:
        print("код ошибки 0:Неверный оператор!")
        return
def калькуляторграфический():
    print("вычисляет площадь и периметр квадратов и прямоугольников. для квадрата введите только первое число, для прямоугольника оба")
    print("нельзя оставлять перове число пустым")
    PS = float(input("для вычисления периметра введите 1, а для вычисления площади введите 0"))
    a = float(input("Введите первое число. оно обязательно"))
    b = float(input("введите второе число. для пропуска поставьте 0"))
    
    if PS == 0:
        if a==0:
            if b==0:
                print("код ошибки 1:пустая фигура")
            else:
                print("код ошибки 2:неверный порядок переменных")
        else:
            if b==0:
                r=a*a    #ПЛОЩАДЬКВАДРТА
                print("Результат:",r)
            else:
                r=a*b    #ПЛОЩАДЬПРЯМОУГОЛЬНИКА
                print("Результат:",r)
    elif PS == 1:
        if a==0:
            if b==0:
                print("код ошибки 1:пустая фигура")
            else:
                print("код ошибки 2:неверный порядок переменных")
        else:
            if b==0:
                r=a*4    #ПЕРИМЕТРКВАДРТА
                print("Результат:",r)
            else:
                r=(a*2)+(b*2)    #ПЕРИМЕТРПРЯМОУГОЛЬНИКА
                print("Результат:",r)
print("это калькулятор для чисел и площадей квадратов и прямоугольников")
print("id графического калькулятора:0")
print("id математического калькулятора:1")
id=int(input("введите идентификатор калькулятора"))
if id==1:
    Канкуляторматематический()
elif id==0:
    калькуляторграфический()
else:
    print("код ошибки 3:неверный идентификатор")
